datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model movies {
  id               Int           @id @default(autoincrement())
  tmdbId           Int           @unique
  title            String
  overview         String?
  originalLanguage String
  originalTitle    String
  popularity       Float
  voteAverage      Float
  voteCount        Int
  releaseDate      DateTime
  posterPath       String
  backdropPath     String
  adult            Boolean
  video            Boolean
  genres           movieGenres[]
}

model tvShows {
  id               Int            @id @default(autoincrement())
  tmdbId           Int            @unique
  name             String
  overview         String?
  originalLanguage String
  originalName     String
  popularity       Float
  voteAverage      Float
  voteCount        Int
  firstAirDate     DateTime
  posterPath       String
  backdropPath     String
  adult            Boolean
  genres           tvShowGenres[]
}

model movieGenres {
  id     Int      @id @default(autoincrement())
  name   String
  movies movies[]
}

model tvShowGenres {
  id      Int       @id @default(autoincrement())
  name    String
  tvShows tvShows[]
}
